<Window x:Class="FileDownloader.DownloadProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileDownloader"
        mc:Ignorable="d"
        Title="Download Progress" Height="210" Width="310">
    <Grid>
        <StackPanel>
            <ProgressBar Name="progressBar" Height="30" Width="300" Margin="20"/>
            <TextBlock FontSize="26" FontWeight="Bold" Name="progressText" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,10"/>
            <Button Name="cancelButton" FontSize="26" FontWeight="Bold" Content="Cancel Download" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CancelButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
